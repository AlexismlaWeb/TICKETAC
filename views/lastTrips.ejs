<!DOCTYPE html>
<html>

<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>

<body>
    <%- include('header')%>
    <div class="container-fluid">
        <div class="list">
            <div class="row col-8">
                <div class="offset-2 mb-3 mt-5">My tickets</div>
                <table class="table table-borderless bg-white">
                <thead>
                  <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Journey</th>
                    <th scope="col">Departure Time</th>
                    <th scope="col">Price</th>
                  </tr>
                </thead>
                <tbody>
                  
                  <%  var total = 0; %>
                  <%  for(i=0 ; i < dataCardsTickets.length ; i++) { %>
                  <%  total +=  parseInt(dataCardsTickets[i].price) %>
                  <%  var date = new Date(dataCardsTickets[i].date) %>
                  <tr>
                    <td><%= date.getDate() %>/<%= date.getMonth()+1 %>/<%= date.getFullYear() %></td>
                    <td><%= dataCardsTickets[i].departureTime %></td>
                    <td><%= dataCardsTickets[i].price %>€</td>
                  </tr>
                  <% } %>
                  <tr class="total">
                    <th scope="row">Total</th>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><%= total %>€</td>
                  </tr>
                </tbody>
              </table>
              <!-- Button trigger modal -->
              <a href="/home">
                  <button type="button" class="btn btn-danger col-2 offset-10">
                  Home
              </button>
            </a>  
            </div>
        </div>
    </div>
    <%-include('footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/javascripts/script.js"></script>
</body>

</html>